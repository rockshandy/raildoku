%h1 Sudoku on Rails... you're new best friend
%section
    %h1 -Your Game Board-
    =form_for :board, :url => 'init', :remote => true do |f|
        %table#board
            -for y in 1..9
                %tr
                    -for x in 1..9
                        %td
                            %input{ :type=>'text', :size=>'1' }
        =f.hidden_field(:value)

        %span#start
            %input#init{ :type=>'submit', :name=>'init', :value=>'Initialize' }
            %span#dimensions
                =f.number_field( :width, {:id =>'width', :type=>'number', :min => 2, :max => 5, :value => 3})
                x
                =f.number_field( :height, {:id=>'height', :type=>'number', :min => 2, :max => 5, :value => 3})
        %span#help
            %input#hint{ :type=>'button', :name=>'hint', :value=>'Hint' }
            %input#check{ :type=>'button', :name=>'check', :value=>'Check' }
            %input#solve{ :type=>'submit', :name=>'solve', :value=>'Solve' }
        %input#res{ :type=>'reset', :name=>'resetbtn', :value=>'Reset' }

